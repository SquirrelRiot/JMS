<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Call of Jury Duty</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Special+Elite' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Black+Ops+One' rel='stylesheet' type='text/css'>
    <link href="~/Content/custom.css" rel="stylesheet" type="text/css">
    <link href="~/Content/sweetalert.css" rel="stylesheet" />
</head>
<body>

    <nav id="nav-main" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button id="nav-header" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div>
                    <a id="nav-logo" class="navbar-brand" href="~/Views/Home/Index.cshtml"><img src="~/images/Call-of-Jury-Duty-Nav-2.png" /></a>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                <ul id="nav-links" class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Confirmation", "View2", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Jury Service<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("About Jury Service", "AboutJuryService", "Home")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Qualifications", "Qualify", "Home")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Types of Juries", "TypesOfjury", "Home")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Jury Pay", "JuryPay", "Home")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Jury Scam", "JuryScam", "Home")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("FAQ", "FAQ", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>
 
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="footer-text text-center">Thank You for Using <span class="font-logo"><em>Call of Jury Duty</em></span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
